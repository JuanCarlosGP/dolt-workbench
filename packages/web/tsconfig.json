{
  "extends": "../../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "downlevelIteration": true,
    "incremental": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@pageComponents/*": [
        "components/pageComponents/*"
      ],
      "@layouts/*": [
        "components/layouts/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@gen/*": [
        "gen/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": []
}
